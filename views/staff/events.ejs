<!-- views/staff/events.ejs -->
<% include ../../partials/header %>
	<div class="page-header text-center">
		<h1><span class="fa fa-unlock"></span> Staff - Events</h1>
	</div>

	<table id="events">
		<thead>
			<th>ID</th>
			<th>Customer</th>
			<th>Bride</th>
			<th>Groom</th>
			<th>Ceremony Date</th>
		</thead>
		<tbody>
		<% if(events) {
				events.forEach(function(item, index) { %>
					<tr>
						<td><%= item.id %></td>
						<td><%= item.customer %></td>
						<td><%= item.brides_name %></td>
						<td><%= item.grooms_name %></td>
						<td><%= item.ceremony_date %></td>
					</tr>

				<% });
			}%>
	</tbody>
	</table>

<% include ../../partials/footer %>

<style>
#events {
	width: 100%;
}
</style>

<script>
$( document ).ready(function() {
    $("#events").DataTable({
    		"iDisplayLength": 50
  	});
});
</script>
